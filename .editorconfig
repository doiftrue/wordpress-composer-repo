# https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
tab_width = 4
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_style = space

[{*.yml,*.json}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
